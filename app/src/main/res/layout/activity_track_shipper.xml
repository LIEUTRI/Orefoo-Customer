<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TrackShipperActivity">

  <com.google.android.material.appbar.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorPrimaryDark"
      android:id="@+id/layoutAppBar">
    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:title="@string/track_order"
        app:titleTextColor="#FFFFFF"
        app:navigationIcon="@drawable/ic_arrow_back"
        android:id="@+id/toolbar"/>
  </com.google.android.material.appbar.AppBarLayout>

  <fragment
      android:name="com.luanvan.customer.Fragments.MapsFragment"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:id="@+id/fragment_maps_container"
      android:layout_below="@id/layoutAppBar"/>

  <androidx.recyclerview.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/recyclerView"
      android:layout_below="@id/fragment_maps_container"
      android:padding="10dp"/>
</RelativeLayout>