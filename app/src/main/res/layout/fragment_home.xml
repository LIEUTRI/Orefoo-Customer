<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutSearch">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/searchbar"
            android:drawablePadding="5dp"
            android:id="@+id/tvSearch"
            android:layout_toStartOf="@+id/tvPlaces"
            android:layout_alignParentStart="true"
            android:textSize="16sp"
            android:fontFamily="sans-serif-condensed"
            android:background="@drawable/bg_searchbar"
            android:padding="8dp"
            android:layout_margin="5dp"
            app:drawableStartCompat="@drawable/ic_search" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="places"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"
            android:id="@+id/tvPlaces"
            android:layout_centerVertical="true"
            app:drawableEndCompat="@drawable/ic_arrow_down" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="current address"
        android:textSize="16sp"
        android:layout_below="@+id/layoutSearch"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/tvAddress"
        app:drawableEndCompat="@drawable/ic_arrow_right"
        app:drawableStartCompat="@drawable/ic_place" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAddress"
        android:id="@+id/layout_cardViews">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="230dp"
                android:layout_height="140dp"
                android:id="@+id/cardView1"
                android:layout_marginEnd="8dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_banhmi"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="230dp"
                android:layout_height="140dp"
                android:id="@+id/cardView2"
                android:layout_marginEnd="8dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_chagio"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="230dp"
                android:layout_height="140dp"
                android:id="@+id/cardView3"
                android:layout_marginEnd="8dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_chagio"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </HorizontalScrollView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardViewCategories"
        android:layout_below="@+id/layout_cardViews"
        app:strokeWidth="1dp"
        app:strokeColor="@color/light_gray"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/titleCategories"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/tvSeeAllCategories"
                    android:textAppearance="?attr/textAppearanceHeadline6" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/tvSeeAllCategories"
                    android:text="@string/seemore"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="5dp"/>
            </RelativeLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollViewCategories">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/layoutCategories">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mainmeal"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textColor="@android:color/black"
                        app:drawableTopCompat="@drawable/bg_mainmeal"
                        android:gravity="center"
                        android:layout_margin="8dp"
                        android:id="@+id/tvMainMeal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/snacks"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textColor="@android:color/black"
                        app:drawableTopCompat="@drawable/bg_snacks"
                        android:gravity="center"
                        android:layout_margin="8dp"
                        android:id="@+id/tvSnacks"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drinks"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textColor="@android:color/black"
                        app:drawableTopCompat="@drawable/bg_drinks"
                        android:gravity="center"
                        android:layout_margin="8dp"
                        android:id="@+id/tvDrinks"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trasua"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textColor="@android:color/black"
                        app:drawableTopCompat="@drawable/bg_trasua"
                        android:gravity="center"
                        android:layout_margin="8dp"
                        android:id="@+id/tvTraSua"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/burgers"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textColor="@android:color/black"
                        app:drawableTopCompat="@drawable/bg_hamburgers"
                        android:gravity="center"
                        android:layout_margin="8dp"
                        android:id="@+id/tvBurgers"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardViewNearby"
        android:layout_below="@+id/cardViewCategories"
        app:strokeWidth="1dp"
        app:strokeColor="@color/light_gray"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/titleNearby"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/tvSeeAllNearby"
                    android:textAppearance="?attr/textAppearanceHeadline6" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/tvSeeAllNearby"
                    android:text="@string/seemore"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="5dp"/>
            </RelativeLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollViewNearby">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/layoutNearby">

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardViewFavourite"
        android:layout_below="@+id/cardViewNearby"
        app:strokeWidth="1dp"
        app:strokeColor="@color/light_gray"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/titleFavourite"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/tvSeeAllFavourite"
                    android:textAppearance="?attr/textAppearanceHeadline6" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/tvSeeAllFavourite"
                    android:text="@string/seemore"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="5dp"/>
            </RelativeLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollViewFavourite">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/layoutFavourite">

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>