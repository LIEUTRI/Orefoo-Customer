<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/layoutAppBar">
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/searchbar"
                android:drawablePadding="5dp"
                android:id="@+id/tvSearch"
                android:layout_toStartOf="@+id/tvPlaces"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/bg_searchbar"
                android:padding="8dp"
                android:layout_margin="5dp"
                app:drawableStartCompat="@drawable/ic_search" />
        </com.google.android.material.appbar.MaterialToolbar>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_delivery_location"
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/tvAddress"
            app:drawableEndCompat="@drawable/ic_arrow_right"
            app:drawableStartCompat="@drawable/ic_place"
            android:background="#FFFFFF"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:id="@+id/layout_cardViews">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="230dp"
                        android:layout_height="140dp"
                        android:id="@+id/cardView1"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_banhmi"/>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="230dp"
                        android:layout_height="140dp"
                        android:id="@+id/cardView2"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_chagio"/>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="230dp"
                        android:layout_height="140dp"
                        android:id="@+id/cardView3"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_chagio"/>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </HorizontalScrollView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardViewCategories"
                android:layout_below="@+id/layout_cardViews"
                app:strokeWidth="1dp"
                app:strokeColor="@color/extra_light_gray"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/titleCategories"
                            android:padding="8dp"
                            android:gravity="center_vertical"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/tvSeeAllCategories"
                            android:textAppearance="?attr/textAppearanceHeadline6" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/tvSeeAllCategories"
                            android:text="@string/seemore"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_alignParentEnd="true"
                            android:paddingEnd="5dp"/>
                    </RelativeLayout>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:id="@+id/scrollViewCategories">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/layoutCategories">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mainmeal"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textColor="@android:color/black"
                                app:drawableTopCompat="@drawable/bg_mainmeal"
                                android:gravity="center"
                                android:layout_margin="8dp"
                                android:id="@+id/tvMainMeal"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/snacks"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textColor="@android:color/black"
                                app:drawableTopCompat="@drawable/bg_snacks"
                                android:gravity="center"
                                android:layout_margin="8dp"
                                android:id="@+id/tvSnacks"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/drinks"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textColor="@android:color/black"
                                app:drawableTopCompat="@drawable/bg_drinks"
                                android:gravity="center"
                                android:layout_margin="8dp"
                                android:id="@+id/tvDrinks"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/trasua"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textColor="@android:color/black"
                                app:drawableTopCompat="@drawable/bg_trasua"
                                android:gravity="center"
                                android:layout_margin="8dp"
                                android:id="@+id/tvTraSua"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/burgers"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textColor="@android:color/black"
                                app:drawableTopCompat="@drawable/bg_hamburgers"
                                android:gravity="center"
                                android:layout_margin="8dp"
                                android:id="@+id/tvBurgers"/>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardViewNearby"
                android:layout_below="@+id/cardViewCategories"
                app:strokeWidth="1dp"
                app:strokeColor="@color/extra_light_gray"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/titleNearby"
                            android:padding="8dp"
                            android:gravity="center_vertical"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/tvSeeAllNearby"
                            android:textAppearance="?attr/textAppearanceHeadline6" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/tvSeeAllNearby"
                            android:text="@string/seemore"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_alignParentEnd="true"
                            android:paddingEnd="5dp"/>
                    </RelativeLayout>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/scrollViewNearby">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/layoutNearby">

                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardViewFavourite"
                android:layout_below="@+id/cardViewNearby"
                app:strokeWidth="1dp"
                app:strokeColor="@color/extra_light_gray"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/titleFavourite"
                            android:padding="8dp"
                            android:gravity="center_vertical"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/tvSeeAllFavourite"
                            android:textAppearance="?attr/textAppearanceHeadline6" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/tvSeeAllFavourite"
                            android:text="@string/seemore"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_alignParentEnd="true"
                            android:paddingEnd="5dp"/>
                    </RelativeLayout>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/scrollViewFavourite">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/layoutFavourite">

                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_cart"
            app:fabSize="normal"
            app:backgroundTint="@color/colorPrimary"
            app:rippleColor="#FFFFFF"
            app:borderWidth="2dp"
            app:elevation="0dp"
            android:elevation="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="18sp"
            app:elevation="7dp"
            android:elevation="7dp"
            android:background="@drawable/bg_cart"
            android:textColor="#FFFFFF"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_gravity="end"/>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>